<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 7.3.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_7_3_0.dtd">

<service-builder dependency-injector="ds" package-path="com.dnebinger.webstory">
	<namespace>WS</namespace>

	<entity name="WebStory" local-service="true" remote-service="true" uuid="true" json-enabled="true" plural-name="WebStories"
			mvcc-enabled="true" trash-enabled="true" uad-application-name="webstory" >

		<column name="webStoryId" primary="true" type="long" />

		<column name="groupId" type="long" />
		<column name="companyId" type="long" />
		<column name="userId" type="long" />
		<column name="userName" type="String" uad-anonymize-field-name="fullName" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />
		<column name="lastPublishDate" type="Date" />

		<column name="title" type="String" />
		<column name="blurb" type="String" />
		<column name="url" type="String" />

		<column name="urlTitle" type="String" />

		<!-- Workflow related fields -->
		<column name="status" type="int" />
		<column name="statusByUserId" type="long" />
		<column name="statusByUserName" type="String" />
		<column name="statusDate" type="Date" />

		<!-- Order -->
		<order by="asc">
			<order-column name="lastPublishDate" order-by="desc" />
			<order-column name="title" />
		</order>

		<!-- Finder methods -->

		<!-- Workflow related Finders -->
		<finder name="C_S" return-type="Collection">
			<finder-column name="companyId" />
			<finder-column arrayable-operator="OR" comparator="=" name="status" />
		</finder>
		<finder name="G_S" return-type="Collection">
			<finder-column name="groupId" />
			<finder-column arrayable-operator="OR" comparator="=" name="status" />
		</finder>
		<finder name="C_U_S" return-type="Collection">
			<finder-column name="companyId" />
			<finder-column name="userId" />
			<finder-column arrayable-operator="OR" comparator="=" name="status" />
		</finder>
		<finder name="G_U_S" return-type="Collection">
			<finder-column name="groupId" />
			<finder-column name="userId" />
			<finder-column arrayable-operator="OR" comparator="=" name="status" />
		</finder>
		<finder name="U_S" return-type="Collection">
			<finder-column name="userId" />
			<finder-column arrayable-operator="OR" comparator="=" name="status" />
		</finder>
		<finder name="G_UT_ST" return-type="Collection">
			<finder-column name="groupId" />
			<finder-column name="urlTitle" />
			<finder-column arrayable-operator="OR" comparator="=" name="status" />
		</finder>


		<!-- Asset related Finders-->
		<finder name="G_UT" return-type="WebStory" unique="true">
			<finder-column name="groupId" />
			<finder-column name="urlTitle" />
		</finder>
		<finder name="URLTitle" return-type="WebStory" unique="true">
			<finder-column name="urlTitle" />
		</finder>

		<!-- Finder Methods Standard -->
		<finder name="GroupId" return-type="Collection">
			<finder-column name="groupId" />
		</finder>
		<finder name="UserIdGroupId" return-type="Collection">
			<finder-column name="userId" />
			<finder-column name="groupId" />
		</finder>
		<finder name="UserId" return-type="Collection">
			<finder-column name="userId" />
		</finder>
		<finder name="CompanyId" return-type="Collection">
			<finder-column name="companyId" />
		</finder>

		<reference entity="User" package-path="com.liferay.portal" />
		<reference entity="AssetEntry" package-path="com.liferay.portlet.asset" />
		<reference entity="AssetLink" package-path="com.liferay.portlet.asset" />
		<reference entity="AssetTag" package-path="com.liferay.portlet.asset" />
		<reference entity="Resource" package-path="com.liferay.portal" />
		<reference entity="WorkflowInstanceLink" package-path="com.liferay.portal" />
	</entity>
</service-builder>